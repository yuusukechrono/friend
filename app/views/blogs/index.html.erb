<div class="container">
    <div class="col-xs-2"><div class="visible-lg"><%= image_tag 'mori.jpg', class:"ad" %></div></div>   
    
    <div class="col-xs-8">
    
      <header>投稿一覧</header>
      <br>
      <p><%= notice %></p>

      <div class=row>
        <div class="top-bottom">
          <%= link_to "Logout", session_path(current_user.id), method: :delete, class: 'btn btn-primary' %><br><br>
          <%= link_to '新しい投稿をする', new_blog_path, class: 'btn btn-primary'  %>
        </div>
      </div>

      <div class="row">
      <% @blogs.reverse_each do |blog| %>
          <div class="content">
            <div class="panel panel-info">
              <div class="panel-heading">
                <p><%= blog.user.name %> / <%= blog.title %></p>
              </div>
              <div class="panel-body">
                <p><%= blog.content %></p>
                <br>
                <%= image_tag(blog.image.url, :size =>'410x300', class:"panel-body.picture")  if blog.image.present?%>
                <br>
                <div class="panel-body.bottom-text"><%= blog.created_at %></div>
              </div>

              <% if current_user.id == blog.user.id %>
                <div class="panel-footer">
                 <%= link_to '閲覧', blog_path(blog.id), class: 'btn btn-primary' %>
                 <%= link_to '編集', edit_blog_path(blog.id), class: 'btn btn-primary'  %>
                 <%= link_to '削除', blog_path(blog.id),class: 'btn btn-primary', method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
                 </div>
                 <% end %>
            </div>
          </div>
      <% end %>
      </div>
      <footer>
        <div class="company">© Friend Corp. All RIGHTS RESERVED.</div>
      </fotter>
    </div>
    <div class="col-xs-2"><div class="visible-lg"><%= image_tag 'making_150202_03.jpg', class:"ad" %></div></div>
</div>